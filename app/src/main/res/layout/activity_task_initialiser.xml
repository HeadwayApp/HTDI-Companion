<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/task_init_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_init_title_str"/>
    
    <EditText
        android:id="@+id/input_task_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/input_task_name_view_hint"/>

    <Button
        android:id="@+id/start_task_creation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_task_creation_button"
        android:onClick="onClickStartTaskCreationButton"/>

</LinearLayout>